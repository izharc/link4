    <script>
        // Clock functionality
        function updateClock() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('he-IL');
            const dateString = now.toLocaleDateString('he-IL');
            document.getElementById('clock').textContent = `${timeString} | ${dateString}`;
        }

        setInterval(updateClock, 1000);
        updateClock();

        // Search functionality
        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                const query = this.value.trim();
                if (query) {
                    if (query.includes('.') && !query.includes(' ')) {
                        // Looks like a URL
                        window.open(`https://${query}`, '_blank');
                    } else {
                        // Search query
                        window.open(`https://www.google.co.il/search?q=${encodeURIComponent(query)}`, '_blank');
                    }
                    this.value = '';
                }
            }
        });

        // Add animation delay to cards
        const cards = document.querySelectorAll('.category-card');
        cards.forEach((card, index) => {
            card.style.animationDelay = `${index * 0.1}s`;
        });

        // Add hover effects to links
        document.querySelectorAll('.site-link').forEach(link => {
            link.addEventListener('mouseenter', function() {
                this.style.boxShadow = '0 4px 15px rgba(102, 126, 234, 0.3)';
            });
            
            link.addEventListener('mouseleave', function() {
                this.style.boxShadow = 'none';
            });
        });

        // Welcome message
        setTimeout(() => {
            console.log('🏠 ברוכים הבאים ל-MyPortal.co.il - דף הבית החדש שלכם!');
        }, 2000);
    </script>
